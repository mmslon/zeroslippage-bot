{
  "extends": "@opentrader/tsconfig/esm.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../../dts/packages/tools",
    "paths": {
      "@opentrader/tsconfig/*": ["../tsconfig/*"],
      "@opentrader/types": ["../types/src/index.ts"],
      "@opentrader/types/*": ["../types/src/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../tsconfig"
    },
    {
      "path": "../types"
    }
  ]
}
